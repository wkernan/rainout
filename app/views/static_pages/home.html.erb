<h1 class="center"><b>Reliable & Easy Rainout Lines</b></h1>
<div style="max-width: 260px; margin: 0 auto 45px;">
	<% if current_user %>
		<%= link_to '<button type="button" class="btn btn-primary btn-lg btn-block">My Facilities</button>'.html_safe, facilities_path %>
	<% else %>
		<%= link_to '<button type="button" class="btn btn-primary btn-lg btn-block">Get My Rainout Line</button>'.html_safe, new_user_registration_path %>
		<div class="center">
			<h2>Or</h2>
			<h2><%= link_to "Sign in", new_user_session_path %></h2>
		</div>
	<% end %>
</div>


